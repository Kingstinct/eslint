{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["ES2021"],
    "target": "ES2021",
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"]
}